<UserControl x:Class="EinsatzberichtKonfigurator.Views.Report.Metadata"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EinsatzberichtKonfigurator.Views.Report"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:MetadataViewModel x:Name="vm"/>
    </UserControl.DataContext>
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Hidden"
                  CanContentScroll="False" >
        <Grid Margin="10" MaxWidth="{Binding RelativeSource=
                {RelativeSource FindAncestor, AncestorType=ScrollViewer},
                Path=ActualWidth, Converter={StaticResource calc},
                ConverterParameter=50}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--#region ALLGEMEINE EINSATZINFO-->
            <Label Style="{StaticResource Heading}" Grid.Row="0" Grid.ColumnSpan="10"
                   Content="Allgemeine Einsatzinformation"/>
            <!--Einsatzbeschreibung-/Stichwort-->
            <!--Alamierungszeitpunkt-->
            <Label Content="Alamierungszeitpunkt:"
                   Grid.Row="2" Grid.Column="0"/>
            <xctk:DateTimePicker Value="{Binding Report.AlarmTime}"
                   Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"
                   FormatString="dd.MM.yyyy hh:mm" Format="Custom"/>
            <!--Bemerkungen-->
            <Label Content="Bemerkungen:"
                   Grid.Row="3" Grid.Column="0"/>
            <TextBox Text="{Binding Report.Comments,
                UpdateSourceTrigger=PropertyChanged}"
                   Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3"
                   TextWrapping="Wrap" PreviewKeyDown="TextBox_PreviewKeyDown"/>
            <!--#endregion-->
            <!--#region EINSATZORT-->
            <Separator Grid.Row="4" Grid.ColumnSpan="10"/>
            <Label Style="{StaticResource Heading}" Grid.Row="5" Grid.ColumnSpan="10"
                   Content="Einsatzort"/>
            <!--Straße, Hausnummer-->
            <Label Content="Straße:"
                    Grid.Row="6" Grid.Column="0"/>
            <TextBox Text="{Binding Report.MissionAddress.Street,
                    UpdateSourceTrigger=PropertyChanged}"
                    Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="1"/>
            <Label Content="Hausnummer:"
                    Grid.Row="6" Grid.Column="2"/>
            <TextBox Text="{Binding Report.MissionAddress.HouseNumber,
                    UpdateSourceTrigger=PropertyChanged}"
                    Grid.Row="6" Grid.Column="3" Grid.ColumnSpan="1"/>
            <!--Ort, PLZ-->
            <Label Content="Ortschaft:"
                    Grid.Row="7" Grid.Column="0"/>
            <TextBox Text="{Binding Report.MissionAddress.City,
                    UpdateSourceTrigger=PropertyChanged}"
                    Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="1"/>
            <Label Content="Postleitzahl:"
                    Grid.Row="7" Grid.Column="2"/>
            <TextBox Text="{Binding Report.MissionAddress.PostalCode,
                    UpdateSourceTrigger=PropertyChanged}"
                    Grid.Row="7" Grid.Column="3" Grid.ColumnSpan="1"/>
            <!--#endregion-->
            <!--#region SCHADENSVERURSACHER-->
            <Separator Grid.Row="8" Grid.ColumnSpan="10"/>
            <Label Style="{StaticResource Heading}" Grid.Row="9" Grid.ColumnSpan="10"
                   Content="Schadenserleidender bzw. -Verursacher"/>

            <Label Content="Name:"
                   Grid.Row="10" Grid.Column="0"/>
            <TextBox Text="{Binding Report.CauserName,
                UpdateSourceTrigger=PropertyChanged}"
                   Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="3"/>
            <!--Straße, Hausnummer-->
            <Label Content="Straße:"
                    Grid.Row="11" Grid.Column="0"/>
            <TextBox Text="{Binding Report.CauserAddress.Street,
                    UpdateSourceTrigger=PropertyChanged}"
                    Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="1"/>
            <Label Content="Hausnummer:"
                    Grid.Row="11" Grid.Column="2"/>
            <TextBox Text="{Binding Report.CauserAddress.HouseNumber,
                    UpdateSourceTrigger=PropertyChanged}"
                    Grid.Row="11" Grid.Column="3" Grid.ColumnSpan="1"/>
            <!--Ort, PLZ-->
            <Label Content="Ortschaft:"
                    Grid.Row="12" Grid.Column="0"/>
            <TextBox Text="{Binding Report.CauserAddress.City,
                    UpdateSourceTrigger=PropertyChanged}"
                    Grid.Row="12" Grid.Column="1" Grid.ColumnSpan="1"/>
            <Label Content="Postleitzahl:"
                    Grid.Row="12" Grid.Column="2"/>
            <TextBox Text="{Binding Report.CauserAddress.PostalCode,
                    UpdateSourceTrigger=PropertyChanged}"
                    Grid.Row="12" Grid.Column="3" Grid.ColumnSpan="1"/>
            <!--Telefonnummer-->
            <Label Content="Telefonnummer:"
                   Grid.Row="13" Grid.Column="0"/>
            <TextBox Text="{Binding Report.CauserPhoneNumber,
                UpdateSourceTrigger=PropertyChanged}"
                   Grid.Row="13" Grid.Column="1" Grid.ColumnSpan="3"/>
            <!--Sonstiges-->
            <Label Content="Sonstiges:"
                    Grid.Row="14" Grid.Column="0"/>
            <Label Content="(pol. Kennzeichen o.ä.)"
                    Grid.Row="15" Grid.Column="0" FontWeight="Normal"/>
            <TextBox Text="{Binding Report.AdditionalCauserInfo,
                    UpdateSourceTrigger=PropertyChanged}"
                    Grid.Row="14" Grid.Column="1" Grid.ColumnSpan="3"
                    Grid.RowSpan="2"/>
            <!--#endregion-->
            <!--#region EINSATZKRÄFTE-->
            <Separator Grid.Row="16" Grid.ColumnSpan="10"/>
            <Label Style="{StaticResource Heading}" Grid.Row="17" Grid.ColumnSpan="10"
                    Content="Einsatzkräfte"/>
            <!--Einsatzleiter-->
            <Label Content="Einsatzleiter:"
                    Grid.Row="18" Grid.Column="0"/>
            <TextBox Text="{Binding Report.MissionLeader,
                    UpdateSourceTrigger=PropertyChanged}"
                    Grid.Row="18" Grid.Column="1" Grid.ColumnSpan="3"/>
            <!--Fahrzeugdaten-->
            <DataGrid ItemsSource="{Binding Report.Vehicles}" AutoGenerateColumns="False"
                    CanUserAddRows="False" Margin="2" Grid.Row="19" Grid.ColumnSpan="4">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="" Binding="{Binding RadioName}"
                            IsReadOnly="True"/>
                    <DataGridCheckBoxColumn Header="Genutzt" Binding="{Binding IsUsed}"/>
                    <DataGridTemplateColumn Header="GH">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <xctk:TimePicker Value="{Binding DepartureGH}"
                            FormatString="HH:mm" IsEnabled="{Binding IsUsed}"/>
                            </DataTemplate> 
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="EST">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <xctk:TimePicker Value="{Binding ArrivalEST}"
                            FormatString="HH:mm" IsEnabled="{Binding IsUsed}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="EST">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <xctk:TimePicker Value="{Binding DepartureEST}"
                            FormatString="HH:mm" IsEnabled="{Binding IsUsed}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="GH">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <xctk:TimePicker Value="{Binding ArrivalGH}"
                            FormatString="HH:mm" IsEnabled="{Binding IsUsed}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="km">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Distance, UpdateSourceTrigger=PropertyChanged}"
                            IsReadOnly="{Binding IsUsed, Converter={StaticResource boolInverter}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Maschinist" MinWidth="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Machinist, UpdateSourceTrigger=PropertyChanged}"
                            IsReadOnly="{Binding IsUsed, Converter={StaticResource boolInverter}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Gruppenführer" MinWidth="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Leader, UpdateSourceTrigger=PropertyChanged}"
                            IsReadOnly="{Binding IsUsed, Converter={StaticResource boolInverter}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

            </DataGrid>
            <!--#endregion-->

            <Separator Grid.Row="20" Grid.ColumnSpan="10"/>
            <Label Style="{StaticResource Heading}" Grid.Row="22" Grid.ColumnSpan="10"
                    Content="Bemerkungen/ Einsatzbeschreibung"/>
            <TextBox Text="{Binding Report.AdditionalComments,
                    UpdateSourceTrigger=PropertyChanged}"
                    Grid.Row="23" Grid.Column="0" Grid.ColumnSpan="4"
                    PreviewKeyDown="TextBox_PreviewKeyDown" TextWrapping="Wrap"/>
        </Grid>
    </ScrollViewer>
</UserControl>
