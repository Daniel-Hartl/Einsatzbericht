<UserControl x:Class="EinsatzberichtKonfigurator.Views.MissionReportControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EinsatzberichtKonfigurator.Views"
             xmlns:tabs="clr-namespace:EinsatzberichtKonfigurator.Views.Report"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:MissionReportViewModel x:Name="vm"/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Einsatzbeschreibung-/Stichwort:"
                Grid.Row="1" Grid.Column="0"/>
        <TextBox Text="{Binding Report.MissionDescription,
                UpdateSourceTrigger=PropertyChanged}"
                Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"/>
        <TabControl Grid.Row="2" Grid.ColumnSpan="2" Margin="0 10">
            <TabItem Header="Allgemein" x:Name="metadata">
            </TabItem>
            <TabItem Header="Mannschaft" x:Name="team">
            </TabItem>
            <TabItem Header="Einsatzmittel" x:Name="ressources">
            </TabItem>
        </TabControl>
        <DockPanel Grid.Row="3" HorizontalAlignment="Right"  Grid.ColumnSpan="2">
            <Button Content="Speichern" Command="{Binding SaveCommand}" Margin="5"/>
            <Button Content="Schließen" Command="{Binding CloseCommand}" Margin="0 5"/>
        </DockPanel>
    </Grid>
</UserControl>
